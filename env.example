# AlgoCredit Environment Variables
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://algocredit:algocredit_password@postgres:5432/algocredit
POSTGRES_DB=algocredit
POSTGRES_USER=algocredit
POSTGRES_PASSWORD=algocredit_password

# Redis Configuration
REDIS_URL=redis://redis:6379

# Algorand Configuration
ALGORAND_NETWORK=testnet
ALGORAND_API_URL=https://testnet-api.algonode.cloud
ALGORAND_INDEXER_URL=https://testnet-idx.algonode.cloud
ALGORAND_ALGOD_TOKEN=
ALGORAND_INDEXER_TOKEN=

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# Frontend Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_ALGORAND_NETWORK=testnet
NEXT_PUBLIC_ALGORAND_API_URL=https://testnet-api.algonode.cloud

# AI/ML Configuration
AI_MODEL_PATH=/app/models
CREDIT_SCORING_MODEL_VERSION=v1.0

# Security
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development
DEBUG=false
RELOAD=false
